<!DOCTYPE html>
<html>
<head>
  <title><%=@title%></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults%>
  <%= csrf_meta_tag %>
</head>
<body>
  <table cellspacing="1">
    <tbody>
      <tr>
        <td class="width_12"></td>
        <td class="header_banner">
          <span class="span_large_dark">TimeCard System</span>
        </td>
        <td class="width_12"></td>
      </tr>
      <tr>
        <td class="width_12"></td>
        <td class="menu">
          <%= render 'layouts/menu' %>
        </td>
        <td class="width_12"></td>
      </tr>
      <tr>
        <td class="width_12"></td>
        <td class="body_content">
          <%= yield %>
        </td>
        <td class="width_12"></td>
      </tr>
    </tbody>
    <tfoot>
      <tr>
        <td></td>
        <td class="footer">
          <span class="footer_company">GNT - Company</span>
        </td>
        <td></td>
      </tr>
    </tfoot>
  </table>
</body>
</html>