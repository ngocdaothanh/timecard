<html>
  <head>
    <title>Demo</title>
  </head>
  <body>
    <p>Full Name : <%=@user.name %> </p>
    <p>Group Name : <%=@user.group.name %> </p>
    <p>Manager : <%=@user.manager_name %> </p>
    <input type="hidden" id="ismanager" value="<%=is_manager_of(@user)%>"/>

    <table id="tablesorter-demo" class="tablesorter" border="0" cellpadding="0" cellspacing="1">
      <thead>
        <tr>
          <th>Date</th>
          <th>Arrive</th>
          <th>Out</th>
          <th>Return</th>
          <th>Leave</th>
          <th>Exception</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
        <% @timeentries.each do |timeentry| %>
          <tr>
            <td class="id" style="display:none"><%=timeentry.id %></td>
            <td name="date"><%=timeentry.date %></td>
            <td name="arrive_at"><%=formatted_hour(timeentry.arrive_at) %></td>
            <td name="out_at"><%=formatted_hour(timeentry.out_at) %></td>
            <td name="return_at"><%=formatted_hour(timeentry.return_at) %></td>
            <td name="leave_at"><%=formatted_hour(timeentry.leave_at) %></td>
            <td name="tcexception"><%=timeentry.exception %></td>
            <td name="notes"><%=timeentry.notes %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
    <input type="button" value="Export CSV" onclick="document.location = '/csv/download?id=<%=@user.id %>'"/>
    <input type="button" value="Back" onclick="document.location = '/user/index'"/>
  </body>

</html>
